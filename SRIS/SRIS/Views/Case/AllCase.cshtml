@model SRIS.ViewModels.RegisterCaseInfo
@{
    ViewBag.Title = "全部案例";
    Layout = "~/Views/Shared/_BlankPage.cshtml";
}
<body>
    <div style="margin-left: 200px; margin-top:20px">
        <div class="demoTable">
            <button class="layui-btn" data-type="reload">新建</button>
        </div>
        <table class="layui-table" lay-data="{width: 1150, height:480, url:'/Case/GetAllCase', page:true, id:'idTest'}" lay-filter="demo">
            <thead>
                <tr>
                    <th lay-data="{field:'CaseCode', width:80}">案例编号</th>
                    <th lay-data="{field:'SRTypeName', width:80, sort: true}">寻亲类别</th>
                    <th lay-data="{field:'Title', width:80}">标题</th>
                    <th lay-data="{field:'BeSeekerName', width:160}">被寻人姓名</th>
                    <th lay-data="{field:'GetTaskDateTime', width:80, sort: true}">领任务时间</th>
                    <th lay-data="{field:'RegisterLink', width:80}">登记链接</th>
                    <th lay-data="{field:'PostLink', width:135, sort: true}">发帖链接</th>
                    <th lay-data="{field:'DNAState', width:80, sort: true}">DNA状态</th>
                    <th lay-data="{field:'IsReturnTask', width:80, sort: true}">是否退任务</th>
                    <th lay-data="{field:'IsBBHJ', width:80, sort: true}">宝贝回家</th>
                    <th lay-data="{fixed: 'right', width:200, align:'center', toolbar: '#barDemo'}">操作</th>
                </tr>
            </thead>
        </table>
    </div>
    <script type="text/html" id="barDemo">
        <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="detail">联系人信息</a>
        <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
        <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
    </script>
    
    <script>
        layui.use('table', function () {
            var table = layui.table;
            //监听表格复选框选择
            table.on('checkbox(demo)', function (obj) {
                console.log(obj)
            });
            //监听工具条
            table.on('tool(demo)', function (obj) {
                var data = obj.data;
                if (obj.event === 'detail') {
                    layer.msg('ID：' + data.id + ' 的查看操作');
                } else if (obj.event === 'del') {
                    layer.confirm('真的删除行么', function (index) {
                        obj.del();
                        layer.close(index);
                    });
                } else if (obj.event === 'edit') {
                    layer.alert('编辑行：<br>' + JSON.stringify(data))
                }
            });

        });
    </script>
</body>







