
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>sss</title>
    <script src="~/Scripts/js/jquery-1.10.2.min.js"></script>
    <link href="~/Content/layui/css/layui.css" rel="stylesheet" />
    <script src="~/Content/layer/layer.js"></script>
    <script src="~/Content/layui/layui.js"></script>
</head>
<body>
    <div class="layui-form">
        <table class="layui-table">
            <colgroup>
                <col width="100">
                <col width="100">
                <col width="150">
            </colgroup>
            <thead>
                <tr>
                    <th>案例编号</th>
                    <th>案例类型</th>
                    <th>标题</th>
                    <th>被寻人姓名</th>
                    <th>领任务时间</th>
                    <th>登记链接</th>
                    <th>发帖链接</th>
                    <th>DNA状态</th>
                    <th>是否退任务</th>
                    <th>引导宝贝回家</th>
                    <th>备注</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.data)
                {
                    <tr>
                        <td>@item.CaseCode</td>
                        <td>@item.SRTypeId</td>
                        <td>@item.Title</td>
                        <td>@item.BeSeekerName</td>
                        <td>@item.GetTaskDateTime.ToShortDateString()</td>
                        <td><a href="@item.RegisterLink" target="_blank" style="color: #438EB9">@item.RegisterLink</a></td>
                        <td>@item.PostLink</td>
                        <td>@item.DNAState</td>
                        @if (item.IsReturnTask == 1)
                        {
                            <td><button class="layui-btn layui-btn-normal layui-btn-sm">退任务信息</button></td>
                        }
                        else
                        {
                            <td></td>
                        }
                        @if (item.IsBBHJ == "1")
                        {
                            <td><button class="layui-btn layui-btn-normal layui-btn-sm">引导信息</button></td>
                        }
                        else
                        {
                            <td></td>
                        }
                        <td>@item.Remarks</td>
                        <td>
                            <button class="layui-btn layui-btn-normal layui-btn-sm">联系人信息</button>
                            <button class="layui-btn layui-btn-normal layui-btn-sm">编辑</button>
                            <button class="layui-btn layui-btn-normal layui-btn-sm">删除</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <!-- PAGE CONTENT ENDS -->
    </div><!-- /.col -->

</body>
</html>
